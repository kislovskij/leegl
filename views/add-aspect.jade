extends layout

block content
  .page-header
    h3 Add Aspect

  form.form-horizontal(role='form', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='category') Aspect Category
      .col-sm-8
        select.form-control(name='category', id='category', autofocus=true)
          each category in categories
            option(value=category._id)
              = category.name
    .form-group
      label(class='col-sm-2 control-label', for='text') Aspect
      .col-sm-8
        input.form-control(type='text', name='text', id='text', autofocus=true)
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit')
          span.ion-paper-airplane
          | Create Aspect
